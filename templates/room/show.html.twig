{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block contents %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Created_by</th>
                <td>{{ get_username(room.createdBy) }}</td>
            </tr>
            <tr>
                <th>Updated_by</th>
                <td>{{ get_username(room.updatedBy) }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ room.createdAt ? room.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ room.updatedAt ? room.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room_index') }}">back to list</a>

    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block contents %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td><a href="{{ path('app_room_show', {'id': room.id}) }}">{{ room.name }}</a></td>
                <td>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_room_new') }}">Create new</a>
{% endblock %}

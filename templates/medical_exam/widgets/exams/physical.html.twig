{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% form_theme formPhysical 'bootstrap_5_layout.html.twig' %}
{% form_theme formEmotional 'bootstrap_5_layout.html.twig' %}
{% form_theme formROM 'bootstrap_5_layout.html.twig' %}

<div class="widget">
    <div class="widget-wrapper">
        <div class="widget-heading">
            <div class="appointment-info">
                <h1>Vitals</h1>
            </div>
            <small>Status last updated: {{ test.updatedAt | date('Y-m-d')  }}</small>
        </div>
        <div class="widget-body">
            {{ form_start(form) }}
                <div class="exam-wrapper row">

                    <div class="mb-3 col-md-6">
                        <label class="form-label ">Temperature</label>
                        <div class="input-group">
                            {{ form_widget(form.temperature) }}
                            <span class="input-group-text">Â°Celsius</span>
                        </div>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label ">Spo2</label>
                        {{ form_widget(form.spo2) }}
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label ">Respiration</label>
                        {{ form_widget(form.respiration) }}
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label ">Bp</label>
                        {{ form_widget(form.bp) }}
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label ">Height</label>
                        <div class="input-group">
                            {{ form_widget(form.height) }}
                            <span class="input-group-text">cm</span>
                        </div>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label ">Weight</label>
                        <div class="input-group">
                            {{ form_widget(form.weight) }}
                            <span class="input-group-text">Kg</span>
                        </div>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label class="form-label ">Bmi</label>
                        {{ form_widget(form.bmi) }}
                    </div>
                </div>
                <button class="btn btn-primary btn-cta">{{ button_label|default('Update') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>


<div class="widget">
    <div class="widget-wrapper">
        <div class="widget-heading">
            <div class="appointment-info">
                <h1>Physical Exam</h1>
            </div>
            <small>Status last updated: {{ test.updatedAt | date('Y-m-d')  }}</small>
        </div>
        <div class="widget-body">
            <div class="exam-wrapper row">
                {{ form_start(formPhysical) }}

                    <div class="exam-section row mb-3">
                        <label class="question">HEENT</label>

                        <div class="mb-3 col-md-6">
                            <label class="form-label ">Mouth</label>
                            {{ form_widget(formPhysical.heentMouth) }}
                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="form-label ">Tonsils</label>
                            {{ form_widget(formPhysical.heentTonsil) }}
                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="form-label ">Pharynx</label>
                            {{ form_widget(formPhysical.heentPharynx) }}
                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="form-label ">Ears</label>
                            {{ form_widget(formPhysical.heentEars) }}
                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="form-label ">Eyes</label>
                            {{ form_widget(formPhysical.heentEyes) }}
                        </div>

                    </div>

                    <div class="exam-section row mb-3">
                        <label class="question">NECK</label>

                        <div class="mb-3 col-md-6">
                            <label class="form-label ">Nodes</label>
                            {{ form_widget(formPhysical.neckNodes) }}
                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="form-label ">Motion</label>
                            {{ form_widget(formPhysical.neckMotion) }}
                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="form-label ">Thyroid</label>
                            {{ form_widget(formPhysical.neckThyroid) }}
                        </div>

                    </div>

                <button class="btn btn-primary btn-cta">{{ button_label|default('Update') }}</button>
                {{ form_end(formPhysical) }}
            </div>
        </div>
    </div>
</div>


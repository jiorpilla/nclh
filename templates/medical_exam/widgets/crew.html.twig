<div class="widget">
    <div class="widget-wrapper">
        <div class="widget-heading">
            <h1>
                <i class="bi bi-people"></i>
                Crew</h1>   
                <small><a href="#" class="text-secondary">View Full Profile</a></small>
        </div>
        <div class="widget-body">
            <div class="crew-mini-widget">
              
                <div class="crew-mini-info d-flex justify-content-between">

                    <div class="col-md-8">
                        <div class="mb-3 ">
                           <label for="" class="form-label">First Name</label>
                           <input type="text" disabled class="form-control" value ="{{ crew.firstName }}">
                       </div>
                       <div class="mb-3 ">
                           <label for="" class="form-label">Last Name</label>
                            <input type="text" disabled class="form-control" value ="{{ crew.lastName }}">
                       </div>
                       <div class="mb-3 ">
                           <label for="" class="form-label">Middle Name</label>
                           <input type="text" disabled class="form-control" value ="{{ crew.middleName }}">
                       </div>
                       <div class="mb-3 ">
                           <label for="username" class="form-label">Suffix</label>
                            <input type="text" disabled class="form-control" value ="{{ crew.suffix }}">
                       </div> 

                </div>

                <div class="crew-mini-avatar col-md-4 mb-4 text-center">
                    <img class="img-fluid mb-3" src="https://placehold.co/160x160/black/white">
                    
                </div>

            </div>
           

        </div>
    </div>
</div>
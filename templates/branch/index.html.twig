{% extends 'base.html.twig' %}

{% block title %}Branch index{% endblock %}

{% block contents %}
    <h1>Branch List</h1>


    <a class="btn btn-dark"
       href="{{ path('app_branch_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for branch in branches %}
            <tr>
                <td><a href="{{ path('app_branch_show', {'id': branch.id}) }}">{{ branch.name }}</a></td>
                <td>
                    <a href="{{ path('app_branch_show', {'id': branch.id}) }}">show</a>
                    <a href="{{ path('app_branch_edit', {'id': branch.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Bulk Add Appointments{% endblock %}

{% block contents %}

    <div class="widget-column col-md-7">

        <div class="widget">
            <div class="widget-wrapper">
                <div class="widget-heading">
                    <h1>Bulk Create Appointments</h1>
                </div>
                <div class="widget-body"><p>Create appointments in bulk by grouping them in a single import file.</p>
                    <ol>
                        <li class="mb-3">Download and use the template below to see exactly how to prepare the data for
                            import.
                            <br>
                            <div class="list-group mt-3">
                                <button type="button" class="list-group-item list-group-item-action"><a
                                            href="/downloads/template.csv">template.csv</a></button>
                            </div>
                        </li>

                        <li class="mb-3">All fields need to be entered in order for your bulk import to be successful. Make
                            sure they are complete before you start importing.
                        </li>

                        {{ form_start(form) }}

                            <div class="mb-4">
                                {{ form_widget(form.csvFile) }}
                            </div>
                            <div class="btn-wrapper d-flex justify-content-start">
                                <button class="btn btn-primary btn-cta" type="submit">Upload CSV</button>
                            </div>
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

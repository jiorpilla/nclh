<div class="table-controls d-flex justify-content-between align-items-center">
    <div class="search-wrapper">
        <input type="text" id="search" class="form-control" placeholder="Search...">
        <i class="bi bi-search"></i>
    </div>
    <div class="table-filter">
        <ul>
            <li class="active">Today</li>
            <li>Tomorrow</li>
            <li>This Week</li>
            <li>Overdue</li>
            <li>Select Period</li>
        </ul>
    </div>

</div>
<table class="table table-hover table-bordered">
    <thead>
    <tr>
        <th scope="col">Appointment Date</th>
        <th scope="col">Full Name</th>
        <th scope="col">Company</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>

    {% for appointment in appointment_lists %}
        <tr>
            <td>{{ appointment.appointmentDate |date('Y-m-d') }}</td>
            <td>
{#                <a href="#" class="appointment-edit"  data-bs-toggle="modal" data-bs-target="#newAppointmentModal">#}
{#                    {{ appointment.appointee.lastName }}, {{ appointment.appointee.firstName }} {{ appointment.appointee.middleName|first }}., {{ appointment.appointee.suffix }}#}
{#                </a>#}
                <a href="#" class="appointment-edit">
                    {{ appointment.appointee.lastName }}, {{ appointment.appointee.firstName }} {{ appointment.appointee.middleName|first }}., {{ appointment.appointee.suffix }}
                </a>
            </td>
            <td>{{ appointment.appointee.company }}</td>
            <td>{{ appointment.appointee.email }}</td>
            <td>{{ appointment.appointee.phoneNumber }}</td>
            <td>
                <a class="btn btn-primary btn-cta" href="{{ path('crew_register_appointment', {'id': appointment.appointee.id}) }}">Start Process</a>
                <a class="btn btn-primary btn-cta" data-bs-toggle="modal" data-bs-target="#newAppointmentModal">Reschedule</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% form_theme form 'bootstrap_5_layout.html.twig' %}
<!-- Modal -->
<div class="modal fade" id="newAppointmentModal" tabindex="-1" aria-labelledby="newAppointmentModal" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Appointment</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                {{ form_start(form) }}
                <div class="error-message">
                    <i class="bi bi-exclamation-triangle-fill"></i> Sample Error Message
                </div>
                    {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary btn-cta">{{ button_label|default('Save Appointment') }}</button>
                {{ form_end(form) }}

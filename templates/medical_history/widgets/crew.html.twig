<div class="widget">
    <div class="widget-wrapper">
        <div class="widget-heading">
            <h1>
                <i class="bi bi-people"></i>
                Crew</h1>
            <small><a href="{{ path('crew_show', {'id': crew.id}) }}" class="text-secondary">View Full Profile</a></small>
        </div>
        <div class="widget-body">
            <div class="crew-mini-widget">
                <div class="crew-mini-info d-flex justify-content-between">
                    <div class="col-md-8">
                        <div class="mb-3 ">
                            <label for="" class="form-label">Name</label>
                            <input type="text" disabled class="form-control" value="{{ crew.fullName }}">
                        </div>
                        <div class="mb-3 ">
                            <label for="" class="form-label">Date Of Birth</label>
                            <input type="text" disabled class="form-control" value="{{ crew.dateOfBirth | date('Y-m-d') }}">
                        </div>
                        <div class="mb-3 ">
                            <label for="" class="form-label">Age</label>
                            <input type="text" disabled class="form-control" value="{{ crew.age() }}">
                        </div>
                    </div>

                    <div class="crew-mini-avatar col-md-4 mb-4 text-center">
                        {% if vich_uploader_asset(crew) is not null %}
                            <img class="img-fluid" src="{{ vich_uploader_asset(crew) }}"/>
                        {% else %}
                            <img class="img-fluid" src="https://placehold.co/160x160/black/white"/>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </div>